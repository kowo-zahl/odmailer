<% content_for :page_title do %>
  <%= 'Neuer Eintrag' %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to 'Zurueck', spree.admin_odmailers_path, icon: 'arrow-left', class: 'btn-primary' %>
<% end %>

<div data-hook="admin_store_new_form_header">
  <%= render partial: 'spree/shared/error_messages', locals: { target: @store } %>
</div>

<div data-hook="admin_odmailer_new_form">
  <%= form_for [:admin, @email], html: {multipart: true}  do |f| %>
    <fieldset class="no-border-top">
      <%= render partial: 'form', locals: { f: f } %>
      <%= render partial: 'spree/admin/shared/new_resource_links' %>
    </fieldset>
  <% end %>
</div>
